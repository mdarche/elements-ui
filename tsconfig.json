{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "types", "scripts", "example"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "maker-ui": ["packages/maker-ui/src"],
      "@maker-ui/*": ["packages/*/src"],
      "tslib": ["node_modules/tslib/tslib.d.ts"],
      "$test/*": ["test/*"]
    }
  }
}
